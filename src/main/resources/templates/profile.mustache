{{>layout/header}}

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="number">회원번호</label>
                <input type="text" class="form-control" id="id" value="{{loginUser.id}}" readonly>
            </div>
            <div class="form-group">
                <label for="name">이름</label>
                <input type="text" class="form-control" id="name" value="{{loginUser.name}}" readonly>
            </div>
            <div class="form-group">
                <label for="email">이메일</label>
                <input type="text" class="form-control" id="email" value="{{loginUser.email}}" readonly>
            </div>
            <div class="form-group">
                <select id="region">
                    <option value=" " selected>-- 선택 --</option>
                    <option value="서울">서울</option>
                    <option value="인천">인천</option>
                </select>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-user-update">수정완료</button>
    </div>
</div>

{{>layout/footer}}